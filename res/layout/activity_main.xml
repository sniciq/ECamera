<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout 
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <ImageButton  
            android:id="@+id/btnIntend"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/photo"
            android:contentDescription="@string/btnIntend"
            />
        <ImageButton 
            android:id="@+id/btnIntendS"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/photo_s"
            android:contentDescription="@string/btnIntendS"
            />
        <ImageButton 
            android:id="@+id/btnIntendV"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/youtube"
            android:contentDescription="@string/btnIntendV"
            />
    </LinearLayout>
    <ImageView 
        android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
        android:visibility="visible"
        android:id="@+id/imageView1"
        android:contentDescription="@string/imageView"
        />
    <VideoView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:visibility="invisible"
		android:id="@+id/videoView1" />

</LinearLayout>